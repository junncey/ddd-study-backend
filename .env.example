# ===========================================
# DDD Demo 环境变量配置示例
# ===========================================
# 复制此文件为 .env 并填入实际值
# 注意：.env 文件不要提交到版本控制
# ===========================================

# 服务器配置
SERVER_PORT=8080

# 数据库配置
DB_HOST=localhost
DB_PORT=3307
DB_NAME=ddd_demo
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password
DB_SSL=false

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DATABASE=0

# JWT配置
# 生成密钥命令: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_at_least_64_bytes_long_for_hs512_algorithm_please_generate_a_secure_random_key
JWT_EXPIRATION=604800000
JWT_REFRESH_EXPIRATION=2592000000

# Druid监控配置
DRUID_MONITOR_ENABLED=false
DRUID_USERNAME=admin
DRUID_PASSWORD=your_druid_password

# Swagger配置
SWAGGER_ENABLED=false
